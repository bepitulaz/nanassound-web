---
import "@fontsource/roboto";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Nanas Sound">
  <!-- Uksed -->
  <section class="container-fluid py-5">
    <div class="row my-3">
      <div class="col-12">
        <div class="d-flex flex-column align-items-center">
          <div class="row">
            <div class="col-lg-8 offset-lg-2">
              <h4 class="display-4 text-center">
                Bring the external synth sound to the eurorack system
              </h4>
              <div class="mt-3 mb-5 text-center">
                <a href="https://shop.nanassound.com/products/uksed-4-channels-audio-i-o-module" class="btn btn-warning">
                  Learn about Uksed (DIY kit)
                </a>
              </div>
              <div class="text-center">
                <img
                  class="img-fluid"
                  src="/products-img/uksed.webp"
                  alt="Uksed - 4-channel audio input module"
                />
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- end of Uksed -->

  <!-- Print this case -->
  <section class="card border border-0 text-bg-dark">
    <img
      class="img-fluid"
      src="/products-img/printthiscase@2x.webp"
      alt="3D printed 84HP eurorack case"
    />
    <div
      class="card-img-overlay p-0 d-flex align-items-end justify-content-end"
    >
      <div id="case-overlay" class="w-100 p-4 p-lg-5">
        <h4 class="display-4 text-lg-end">
          Print your affordable<br />84 HP eurorack case
        </h4>
        <div class="text-lg-end">
          <a
            href="https://cults3d.com/en/3d-model/tool/eurorack-case-84hp-rails-are-still-needed-nanassound"
            class="btn btn-warning"
            target="_blank"
            rel="noreferrer noopenner"
          >
            See how to do it
          </a>
        </div>
      </div>
    </div>
  </section>
  <!-- end of Print this case -->
</Layout>

<style>
  #case-overlay {
    background: linear-gradient(
      to top,
      rgba(0, 0, 0, 0.7),
      rgba(255, 255, 255, 0)
    );
  }
</style>
